<%- include('../partials/header') %>
 
<h1>Edit Skills</h1>
<!-- The action attribute is the path of the request when the form is submitted -->
<form action="/skills/<%= skill.id %>?_method=PUT" method="POST" autocomplete="off">
 <input type="text" name="skill" value="<%= skill.skill %>">
 <br><label><input name="done" type="checkbox" <%= skill.has ? 'checked' : '' %>> Has?</label>
 <br>
 <button type="submit">Save Todo</button>
</form>
 
<%- include('../partials/footer') %>